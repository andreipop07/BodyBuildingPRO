<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BodyBuildingPRO.Views.FreeBack"
             BackgroundColor="White">

    <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" RowSpacing="0">
        <Image x:Name="Back" Aspect="AspectFill" Grid.RowSpan="1" Source="back.jpeg" Opacity="1"  HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand" HeightRequest="900"/>
        <ImageButton Source="rotate.png" 
            BackgroundColor="Transparent"
            Margin="310,490,24,10" 
            Clicked="Button_Rotate"
            Aspect="AspectFit">
        </ImageButton>
    </Grid>
</ContentPage>